<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="color_primary">#cc40738D</color>
    <color name="action_bar_color">@color/color_primary</color>

    <style name="ActionBar.Dark" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/action_bar_color</item>
        <item name="background">@color/action_bar_color</item>
    </style>

    <style name="Theme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBar.Dark</item>
        <item name="actionBarStyle">@style/ActionBar.Dark</item>
    </style>
</resources>