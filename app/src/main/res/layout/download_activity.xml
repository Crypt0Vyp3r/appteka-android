<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/app_icon"
                android:layout_gravity="center_vertical"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_label"
                    android:layout_gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="?text_primary_color"
                    android:textSize="17sp"
                    tools:text="Sample Application Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_package"
                    android:layout_gravity="left|center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:textSize="14sp"
                    android:textColor="?text_secondary_color"
                    android:typeface="monospace"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:fontFamily="monospace"
                    tools:text="com.example.android.app"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_first"
                style="@style/Widget.AppCompat.Button"
                android:layout_gravity="center"
                android:text="@string/remove"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_second"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_gravity="center"
                android:text="@string/open"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="12dp">

            <com.tomclaw.appsend.main.view.PlayView
                android:id="@+id/app_downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:play_count="157"
                app:play_description="@string/downloads"
                app:play_comment="@string/downloads_comment"/>

            <com.tomclaw.appsend.main.view.PlayView
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/play_item_margin"
                android:layout_marginStart="@dimen/play_item_margin"
                app:play_count="19.7"
                app:play_description="@string/megabytes"
                app:play_comment="@string/size_comment"/>

            <com.tomclaw.appsend.main.view.PlayView
                android:id="@+id/min_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/play_item_margin"
                android:layout_marginStart="@dimen/play_item_margin"
                app:play_count="4.1"
                app:play_description="@string/android"
                app:play_comment="@string/android_comment"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/grey" />

        <!-- Share, Open in browser, Abuse -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="●  Permission"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textSize="14sp"
                tools:text="●  Permission"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textSize="14sp"
                tools:text="●  Permission"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>