<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    app:contentPadding="6dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout android:id="@+id/buddy_container"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/app_icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hot_drink"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donate_title"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/text_primary_color"
                android:text="@string/donate_title"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donate_description"
                android:layout_gravity="left|center_vertical"
                android:lines="1"
                android:text="@string/donate_description"
                android:textSize="15sp"
                android:textColor="@color/text_secondary_color"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>