<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UselessParent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_input"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/password_input"
                    android:nextFocusUp="@+id/password_input" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_input"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/name_input"
                    android:nextFocusUp="@+id/name_input" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_input"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/password_input"
                    android:nextFocusUp="@+id/password_input" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:text="@string/register_button" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/notice_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/label_stub"
                    android:layout_toRightOf="@+id/label_stub"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingLeft="8dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/registration_notice_title"
                        android:textColor="?attr/text_primary_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/registration_notice_message"
                        android:textColor="?attr/text_secondary_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:id="@+id/label_stub"
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/notice_container"
                    android:layout_alignBottom="@+id/notice_container"
                    android:background="@color/accent_color" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
