<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/discuss_view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/intro_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/intro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/discuss_intro_title"
                android:textColor="?attr/text_primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="@string/discuss_intro_text"
                android:textColor="?attr/text_primary_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/get_started_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/get_started" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/discuss_back_repeat">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discuss_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="none"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:fastScrollEnabled="false"
                android:paddingBottom="10dp"
                android:stackFromBottom="true"
                android:transcriptMode="normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:background="@drawable/compose_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/compose_background"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/message_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/enter_your_message"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="4"
                        android:minHeight="32dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="8dp"
                        android:paddingTop="0dp"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/send_button"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription=""
                        android:padding="9dp"
                        android:scaleType="center"
                        android:src="@drawable/send"
                        android:tint="@color/primary_color" />

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                tools:text="@string/discuss_loading_error" />

            <Button
                android:id="@+id/button_retry"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/error_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/retry" />

        </RelativeLayout>

    </ViewFlipper>

</FrameLayout>