<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="accent_color">#005c4a</color>
    <color name="primary_color">#388e3c</color>
    <color name="primary_dark_color">#1b5e20</color>

    <color name="action_bar_color">@color/primary_color</color>

    <color name="chocolate_color">#d3691f</color>
    <color name="chocolate_dark_color">#A03600</color>

    <color name="badge_color">#ff5a00</color>

    <color name="black">#000</color>
    <color name="dark_back_color">#FF101010</color>
    <color name="cardview_dark_background">#FF202020</color>
    <color name="cardview_light_background">#FFFFFFFF</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="text_primary_color">#00000E</item>
        <item name="text_secondary_color">#4e4e4e</item>
        <item name="donate_card_background">#f0f0f0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Light</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="android:windowBackground">@color/dark_back_color</item>

        <item name="text_primary_color">#FFFFF1</item>
        <item name="text_secondary_color">#B1B1B1</item>
        <item name="donate_card_background">#151515</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>