<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="accent_color">#4d9116</color>
    <color name="primary_color">#32a304</color>
    <color name="primary_dark_color">#2a8a03</color>

    <color name="chocolate_color">#894121</color>
    <color name="chocolate_dark_color">#632309</color>

    <color name="badge_color">#f79406</color>

    <color name="grey">#dadada</color>
    <color name="grey_dark">#747474</color>
    <color name="black">#000</color>
    <color name="dark_back_color">#FF101010</color>
    <color name="cardview_dark_background">#FF202020</color>
    <color name="cardview_light_background">#FFFFFFFF</color>

    <color name="permissions_container_light_background">#def1e8</color>
    <color name="permissions_container_dark_background">#0C1D15</color>

    <color name="play_view_light_color">#EF6C00</color>
    <color name="play_view_dark_color">#a34900</color>

    <color name="divider_light">#dadada</color>
    <color name="divider_dark">#424242</color>

    <color name="abuse_color">#d63205</color>

    <color name="dangerous_permission_color">#c40e72</color>

    <color name="color_chat_item_text">#000000</color>
    <color name="chat_date_color">#454545</color>
    <color name="chat_time_color">#666666</color>
    <color name="inc_text_color">#FFFFFF</color>
    <color name="out_text_color">#454545</color>
    <color name="chat_service_color">#454545</color>
    <color name="compose_background_color_light">#f4ffffff</color>
    <color name="compose_background_color_dark">#f4000000</color>
    <color name="discuss_bubble_color_light">@android:color/white</color>
    <color name="discuss_bubble_color_dark">#222222</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="text_primary_color">#00000E</item>
        <item name="text_secondary_color">#4e4e4e</item>
        <item name="donate_card_background">#f0f0f0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Light</item>

        <item name="bottom_bar_background">#ffffff</item>

        <item name="toolbar_background">@color/primary_color</item>

        <item name="play_view_color">@color/play_view_light_color</item>

        <item name="divider_color">@color/divider_light</item>

        <item name="compose_background">@drawable/compose_background_light</item>
        <item name="discuss_back_repeat">@drawable/discuss_back_light_repeat</item>
        <item name="compose_gradient">@drawable/compose_gradient_light</item>
        <item name="discuss_bubble_color">@color/discuss_bubble_color_light</item>
        <item name="service_background">@drawable/service_background_light</item>

        <item name="rating_empty">#ffcbcbcb</item>
        <item name="rating_fill">#ff6b6b6b</item>

        <item name="five_stars">#ff72b98c</item>
        <item name="four_stars">#ffa1cd7c</item>
        <item name="three_stars">#ffffea5f</item>
        <item name="two_stars">#fff2bd69</item>
        <item name="one_stars">#fff08f74</item>

        <item name="permissions_container_background">
            @color/permissions_container_light_background
        </item>
    </style>

    <style name="AppThemeBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="android:windowBackground">@color/dark_back_color</item>

        <item name="text_primary_color">#FFFFF1</item>
        <item name="text_secondary_color">#B1B1B1</item>
        <item name="donate_card_background">#151515</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>

        <item name="bottom_bar_background">#181818</item>

        <item name="toolbar_background">#263238</item>

        <item name="play_view_color">@color/play_view_dark_color</item>

        <item name="divider_color">@color/divider_dark</item>

        <item name="compose_background">@drawable/compose_background_dark</item>
        <item name="discuss_back_repeat">@drawable/discuss_back_dark_repeat</item>
        <item name="compose_gradient">@drawable/compose_gradient_dark</item>
        <item name="discuss_bubble_color">@color/discuss_bubble_color_dark</item>
        <item name="service_background">@drawable/service_background_dark</item>

        <item name="rating_empty">#ff343434</item>
        <item name="rating_fill">#ffa1a1a1</item>

        <item name="five_stars">#ff366c4a</item>
        <item name="four_stars">#ff537d30</item>
        <item name="three_stars">#ffad9700</item>
        <item name="two_stars">#ff9d650e</item>
        <item name="one_stars">#ff902c10</item>

        <item name="permissions_container_background">@color/permissions_container_dark_background
        </item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Chat.Message" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">all</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="RatingDetailElement" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/rating_detail_element</item>
    </style>

</resources>